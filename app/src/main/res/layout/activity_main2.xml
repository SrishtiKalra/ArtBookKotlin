<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <EditText
            android:layout_width="271dp"
            android:layout_height="62dp"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="70dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="70dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="144dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="19dp" app:layout_constraintBottom_toTopOf="@+id/imageView"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="146dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="50dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="274dp"
            android:onClick="save" android:layout_marginTop="6dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="303dp"
            android:layout_height="300dp" app:srcCompat="@drawable/select"
            android:id="@+id/imageView" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="54dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="54dp" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/editText"/>
</android.support.constraint.ConstraintLayout>